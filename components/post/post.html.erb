<% set_default("title", "Title") %>
<% set_default("text", "post text") %>
<% set_default("post_id", 0) %>
<% set_default("created_at", new Date()) %>
<% set_default("replies", []) %>
<% set_default("tripcode", "anon") %>

<div class="post" data-post-id="<%= post_id %>"> 
  <div class="title clearfix">
    <h4><b><%= title %></b>
    </h4>

    <div class="tripcode" data-tripcode="<%= tripcode %>">
    </div>

    <div class="created" style="margin-top: -10px">
      <small><%= created_at %></small>
    </div>

  </div>

  <div class="text col-md-12">
    <%= text %>
  </div>

  <div class="replies clearfix mtl">
    <% _.each(replies, function(r) { %>
      <div class="ptl pbl">
        <div class="tripcode" data-tripcode="<%= r.tripcode %>"></div>
        <b><%= r.title %></b>
        <small><%= r.text %></small>
      </div>

    <% }); %>
  </div>

  <form class="reply">
    <div class="clearfix">
      <input type="text" class="form-control" placeholder="reply"> </input>
    </div>
  </form>

</div>
